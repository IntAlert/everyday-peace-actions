extends ../layout

block content
	div.my-badges.gridListdemoDynamicTiles(ng-controller="BadgesController")
		
		md-grid-list(
			md-cols="1"
			md-cols-sm="2"
			md-cols-md="3"
			md-cols-gt-md="6"
			md-row-height-gt-md="1:1"
			md-row-height="4:3"
			md-gutter="8px"
			md-gutter-gt-sm="4px"
		)
			md-grid-tile(
				ng-repeat="tile in tiles"
				md-rowspan="{{tile.span.row}}"
				md-colspan="{{tile.span.col}}"
				md-colspan-sm="1"
				md-colspan-xs="1"
				class="{{tile.background}}"
			)
				md-icon(md-svg-icon="{{tile.icon}}")
				md-grid-tile-footer
					h3 {{tile.title}}
		div.ctas
			md-button.more.md-raised.md-primary(href="/menu") Get more badges
